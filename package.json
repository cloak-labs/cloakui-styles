{
  "name": "@cloakui/styles",
  "version": "0.3.5",
  "description": "TailwindCSS presets for styling components in any JS framework.",
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsc -p tsconfig.json -w --preserveWatchOutput",
    "build": "npm run build-ts",
    "build-ts": "tsc -p tsconfig.json",
    "clean": "rm -rf .turbo && rm -rf dist && npm run clean:modules",
    "clean:modules": "rm -rf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloak-labs/cloakui-styles.git"
  },
  "keywords": [
    "cloakui",
    "ui",
    "styles",
    "tailwind",
    "tailwindcss",
    "cva",
    "class-variance-authority",
    "component styles",
    "styled components"
  ],
  "author": "Kaelan Smith",
  "license": "LGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/cloak-labs/cloakui-styles/issues"
  },
  "homepage": "https://github.com/cloak-labs/cloakui-styles#readme",
  "devDependencies": {
    "@types/node": "^18.18.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "cva": "1.0.0-beta.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
